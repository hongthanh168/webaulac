                Chức danh
            </th> 
            <th>
                Bằng cấp phải có
            </th> 
                    
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowID = "DIC_POSITION_DEGREE_" + item.PositionDegreeID.ToString();
            //string posName = "";
            //string deName = "";
            //DIC_POSITION objPos = db.DIC_POSITION.Find(item.PositionID);
            //DIC_DEGREE objDe = db.DIC_DEGREE.Find(item.DegreeID);
            //if (objDe != null)
            //{
            //    deName = objDe.DegreeName;
            //}
            //if (objPos != null)
