@using WebAuLac.Models;
@model IEnumerable<WebAuLac.Models.DIC_DEGREE>
@{
    DIC_POSITION chucDanh = (DIC_POSITION)ViewBag.chucDanh;
    string tieuDe = "Danh sách bằng cấp bắt buộc của chức danh: " + chucDanh.PositionName;
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <text>@tieuDe</text>
}
<p>
    <a id="btnThemVaoDS" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm vào danh sách</a>
    <a href="@Url.Action("Index", "DIC_POSITION_DEGREE", new { id =chucDanh.PositionID})" class="btn btn-info"><i class="fa fa-backward m-right-xs"></i>Về danh sách</a>
</p>
@if (Model != null)
{
    <table id="EmployeesList" class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>STT</th>
                <th>ID</th>
                <th>
                    Tên bằng cấp
                </th> 
                <th>Mô tả</th>                           
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td></td>
                    <td></td>
                    <td>@item.DegreeID</td>
                    <td>@Html.DisplayFor(modelItem => item.DegreeName)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>                                                                   
                </tr>
            }
        </tbody>
    </table>
}
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
    @Styles.Render("~/vendors/DataTables/checkbox/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/vendors/DataTables/checkbox/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">
        var t;
        $(document).ready(function () {
            t = $('#EmployeesList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "iDisplayLength": 25,
                "columnDefs": [
                    {
                        "searchable": false,
                        "orderable": false,
                        "className": 'select-checkbox',
                        "targets": 0
                    },
                    {
                        "searchable": false,
                        "orderable": false,
                        "visible":false,
                        "targets": 2
                    },
                ],
                "select": {
                    "style": 'os',
                    "selector": 'td:first-child'
                }
            });
            t.on('order.dt search.dt', function () {
                t.column(1, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
        $('#btnThemVaoDS').click(function () {
            var listID = [];
            var count = 0;
            $.each(t.rows('.selected').data(), function () {
                listID[count] = this[2];
                count++;

            });
            $.ajax({
                type: "POST",
                traditional: true,
                url: '@Url.Action("ThemVaoDanhSach", "DIC_POSITION_DEGREE")',
                data: JSON.stringify({ function_param: listID, idPos: @chucDanh.PositionID }),
                contentType: "application/json; charset=utf-8",
                async: false,
                success: function (data) {
                     location.reload();
                },
                error: function () {
                    alert("Có lỗi xảy ra");
                }
            });
        });
    </script>
}




