@model IEnumerable<WebAuLac.Models.sp_LayDSKhongDatPassport_Result>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section huongdan{
    <text>Danh sách không đạt Passport</text>
}
<table id="EmployeeList" class="table table-striped jambo_table border-right">
    <thead>
        <tr>
            <th></th>
            <th>Họ</th>
            <th>Tên</th>
            <th>Ngày sinh</th>
            <th>Nơi sinh</th>
            <th>Chức vụ</th>
            <th>Tàu</th>
            <th>Ngày hết hạn Passport</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)  </td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.BirthDay)</td>
                <td>@Html.DisplayFor(modelItem => item.BirthPlace)</td>
                <td>@Html.DisplayFor(modelItem => item.ChucVu)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td>@Html.DisplayFor(modelItem => item.ExpirationDate)</td>
            </tr>
        }
    </tbody>

</table>

@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")

}

@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">
        $(document).ready(function () {
            var t = $('#EmployeeList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },                
                ],

            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });

    </script>
}



