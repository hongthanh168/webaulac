@model WebAuLac.Models.TuNgayDenNgay
@{
    ViewBag.Title = "Thống kê nhân viên - thuyền viên nghỉ việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <text>Thống kê nhân viên - thuyền viên nghỉ việc</text>
}
@{
    IEnumerable<WebAuLac.Models.sp_LayDSNghiViec_Result> bangKe = (IEnumerable<WebAuLac.Models.sp_LayDSNghiViec_Result>)ViewBag.BangKe;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row" style="text-align:left; margin-bottom:15px;">          
            <div class="form-group">
                <div>
                    <a href="@Url.Action("Create", "QuyetDinhNghiViec", new {loaiNV=1})" class="btn btn-primary" data-modal><i class="fa fa-plus m-left-xs"></i>Thêm mới Thuyền viên</a>
                    <a href="@Url.Action("Create", "QuyetDinhNghiViec", new {loaiNV=0})" class="btn btn-primary" data-modal><i class="fa fa-plus m-left-xs"></i>Thêm mới Nhân viên</a>
                </div>
            </div>
        </div>


    </div>
}
@if (bangKe != null)
{
       
    <table class="table table-bordered table-striped table-hover" id="bangKe">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Họ tên
                </th>                
                <th>
                    Chức danh
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Trình độ
                </th>
                <th>
                    Tàu công tác
                </th>
                <th>
                    Số QĐ
                </th>
                <th>
                    Ngày QĐ
                </th>               
                
                <th>Lý do nghỉ việc</th>
                <th>
                    Ghi chú
                </th>
                <th>
                </th>
                <th>                   
                </th>
                <th>                  
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in bangKe)
            {
                <tr>
                    <td></td>
                    <td>
                        @{
                            string hoTen = item.FirstName + " " + item.LastName;
                            string ngayQD = "";
                            string ngaySinh = "";
                            if (item.BirthDay.HasValue)
                            {
                                ngaySinh = item.BirthDay.Value.ToString("dd/MM/yyyy");
                            }
                            if (item.DecisionDate.HasValue)
                            {
                                ngayQD = item.DecisionDate.Value.ToString("dd/MM/yyyy");
                            }
                        }
                        <text>@hoTen</text>
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionName)
                    </td>
                    <td>
                        @ngaySinh
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EducationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QTDT)                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoQD)
                    </td>
                    <td>
                        @ngayQD
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.LyDoNghiViec_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        <a href="@Url.Action("XuatQuyetDinhNghiViec", "QuyetDinhNghiViec", new { QTCT_ID = item.EmploymentHistoryID })" class="btn btn-success btn-xs" target="_blank"><i class="fa fa-file-excel-o"></i></a>
                    </td>
                    <td>                        
                        <a href="@Url.Action("Edit", "QuyetDinhNghiViec", new { id = item.EmploymentHistoryID })" class="btn btn-success btn-xs" data-modal><i class="fa fa-edit"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "QuyetDinhNghiViec", new { id = item.EmploymentHistoryID })" class="btn btn-danger btn-xs" data-modal><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                            }
        </tbody>
    </table>
                            }
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")
    <script type="text/javascript">
        var columnGroup = 4;
        $(document).ready(function () {
            LoadDatatable();
        })
        function LoadDatatable() {
            t = $('#bangKe').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "iDisplayLength": 25,
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }]

            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw()
        }
    </script>
}
