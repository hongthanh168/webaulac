@model IEnumerable<WebAuLac.Models.HRM_EMPLOYMENTHISTORY>

@{
    ViewBag.Title = "Index";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <h2>Điều chuyển công tác</h2>
}
<p>
    <a href="@Url.Action("CreateOne", "HRM_EMPLOYMENTHISTORY", new { EmployeeID =  ViewBag.idThuyenVien, PlanID=ViewBag.idKeHoach, detailPlanID = ViewBag.idChitietKeHoach })" class="btn btn-primary" data-modal><i class="fa fa-plus m-right-xs"></i>Thêm mới</a>
</p>

<table id="EmploymentHistoryList" class="table table-bordered action-table">
    <thead>
        <tr>
            <th>STT</th>

            <th>
                Quyết định số
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDecisionID)
            </th>

            <th>
                Ngày quyết định
            </th>
            <th>
                Phòng ban
            </th>
            <th>
                Chức vụ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int stt = 0;
        }
        @foreach (var item in Model)
        {
            stt = stt + 1;
            string rowID = "HRM_EMPLOYMENTHISTORY_" + item.EmploymentHistoryID.ToString();
            <tr id="@rowID">
                <td>@stt</td>

                <td>
                    @Html.DisplayFor(modelItem => item.DecisionNo)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIC_CATEGORYDECISION.CategoryDecisionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecisionDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.DIC_DEPARTMENT.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.DIC_POSITION.PositionName)
                </td>


                <td>


                    <a href="@Url.Action("Edit", "HRM_EMPLOYMENTHISTORY", new { id=item.EmploymentHistoryID })" class="btn btn-success btn-xs" data-modal><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "HRM_EMPLOYMENTHISTORY", new { id=item.EmploymentHistoryID })" class="btn btn-danger btn-xs" data-modal><i class="fa fa-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>

</table>
<a href="@Url.Action("Index", "HRM_EMPLOYEE2")"><i class="fa fa-plus m-right-xs"></i>Trở lại danh sách thuyền viên</a>

@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">

        $(document).ready(function () {
            var t = $('#EmploymentHistoryList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "searchable": false,
                    "orderable": false,
                    "targets":6
                },
                ],
                "order": [[1, 'asc']]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
        $('#EmploymentHistoryList tr').dblclick(function () {
           
            var id = $(this).attr('id');
            id = id.replace('DIC_EDUCATION_', '');
            var url = '@Url.Action("Details", "DIC_EDUCATION", new { id = "js-id", data_modal="" })'
              .replace("js-id", encodeURIComponent(id));
            $.get(url, function (data) {
                $('#myModalContent').html(data);
                $('#myModal').modal('show');
            });
        })
    </script>
}

