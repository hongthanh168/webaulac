@model IEnumerable<WebAuLac.Models.HRM_EMPLOYMENTHISTORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <h2>Quá trình công tác của nhân viên: </h2>
}
<p>
    <a href="@Url.Action("Create", "HRM_EMPLOYMENTHISTORY")" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm mới1</a>
</p>
<p>
    <a href="@Url.Action("CreateWithEmployee", "HRM_EMPLOYMENTHISTORY", new { EmployeeID = ViewBag.idNhanVien })" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm mới2</a>
</p>
<table id="EmploymentHistoryList" class="table table-striped jambo_table border-right action-table">
    <thead>
        <tr>
            <th></th>

            <th>
                @Html.DisplayNameFor(model => model.DecisionNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DecisionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectiveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DIC_CATEGORYDECISION.CategoryDecisionName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DIC_SALARY_STEP.StepName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DIC_DEPARTMENT_POSITION.Coeff)
            </th>
            


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowID = "HRM_EMPLOYMENTHISTORY_" + item.EmploymentHistoryID.ToString();
            <tr id="@rowID">
                <td></td>

                <td>
                    <a href="@Url.Action("Details", "HRM_EMPLOYMENTHISTORY", new { id=item.EmploymentHistoryID })">@Html.DisplayFor(modelItem => item.DecisionNo)</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecisionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EffectiveDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DIC_CATEGORYDECISION.CategoryDecisionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIC_DEPARTMENT_POSITION.Coeff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIC_SALARY_STEP.StepName)
                </td>

                 
                <td>
                    <a href="@Url.Action("Edit", "HRM_EMPLOYMENTHISTORY", new { id=item.EmploymentHistoryID })" class="btn btn-success btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "HRM_EMPLOYMENTHISTORY", new { id=item.EmploymentHistoryID })" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")

    <script language="javascript">
        $(document).ready(function () {
            var t = $('#EmploymentHistoryList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "searchable": false,
                    "orderable": false,
                    "targets": 7
                },
                ],
                "order": [[1, 'asc']]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
        $('#EmploymentHistoryList tr').dblclick(function () {
            var id = $(this).attr('id');
            id = id.replace('HRM_EMPLOYMENTHISTORY_', '');
            window.location = '@Url.Action("Details", "HRM_EMPLOYMENTHISTORY", new { id = "js-id" })'
              .replace("js-id", encodeURIComponent(id));

        })

        // assuming you're using jQuery
        $("#ddlAjax").change( function (event) {
            $.ajax({
                url: "Controller/GetPartialGraph/" + $(this).val(),
                data: { id = $(this).val() /* add other additional parameters */ },
                cache: false,
                type: "POST",
                dataType: "html",

                success: function (data, textStatus, XMLHttpRequest) {
                    $("#divPartialView").html( data ); // HTML DOM replace
                }
            });
        });
    </script>

}


