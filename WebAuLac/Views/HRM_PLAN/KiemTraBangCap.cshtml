@model IEnumerable<WebAuLac.Models.sp_LayDSBangCapTheoChucVu_Result>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Thông tin bằng cấp</h4>
</div>
<div class="modal-body">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Tên bằng cấp
                </th>
                <th>
                    Tình trạng
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{ 
                            stt++;
                        }
                        <text>@stt</text>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegreeName);
                    </td>
                    <td>
                        @{
                            int tinhTrang = item.tinhtrang.Value;
                            string sTinhTrang = "";
                            switch (tinhTrang)
                            {
                                case 1:
                                    sTinhTrang = "Sắp hết hạn";
                                    break;
                                case 2:
                                    sTinhTrang = "Hết hạn";
                                    break;
                                case 3:
                                    sTinhTrang = "Chưa có";
                                    break;
                            }
                        }
                        <text>@sTinhTrang</text>
                    </td>
                </tr>
                            }
        </tbody>

    </table>
</div>
<div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" style="margin-bottom:0px;">
        <i class="fa fa-ban"></i> Hủy
    </button>        
</div>



