@using WebAuLac.Models;
@model IEnumerable<WebAuLac.Models.sp_T_LayDanhSachNhanVien_Result>
@{
    tbl_khoadaotao khoa = (tbl_khoadaotao)ViewBag.khoaDaoTao;
    string tenLop = "Lập danh sách nhân viên đi học cho lớp: " + khoa.tenkhoadaotao;
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    AuLacEntities db = new AuLacEntities();
}

@section huongdan{
    <text>@tenLop</text>
}
<p>
    <a id="btnThemVaoLop" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm vào lớp</a>
    <a href="@Url.Action("Index", "tbl_ctdaotao", new { idKhoaDaoTao =khoa.id_khoadaotao})" class="btn btn-info"><i class="fa fa-backward m-right-xs"></i>Về danh sách lớp</a>
</p>
@if (Model != null)
{
    <table id="EmployeesList" class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>STT</th>
                <th>ID</th>
                <th>
                    Họ
                </th>
                <th>
                    Tên
                </th>

                <th>
                    Ngày sinh
                </th>
                <th>
                    Phòng ban
                </th>
                <th>
                    Chức vụ
                </th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string rowID = "HRM_EMPLOYEE" + item.EmployeeID.ToString();
                //lấy ra ngày ký hợp đồng                
                <tr id="@rowID">
                    <td></td>
                    <td></td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeID)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @{
                            if (item.BirthDay.HasValue)
                            {
                                <text>@item.BirthDay.Value.ToString("dd/MM/yyyy")</text>
                            }
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChucVu)
                    </td>                                                  
                </tr>
        }
        </tbody>
    </table>
}
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
    @Styles.Render("~/vendors/DataTables/checkbox/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/vendors/DataTables/checkbox/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">
        var t;
        $(document).ready(function () {
            t = $('#EmployeesList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [
                    {
                        "searchable": false,
                        "orderable": false,
                        "className": 'select-checkbox',
                        "targets": 0
                    },
                    {
                        "searchable": false,
                        "orderable": false,
                        "targets": 1
                    },
                    {
                        "searchable": false,
                        "orderable": false,
                        "visible":false,
                        "targets": 2
                    } 
                ],
                "select": {
                    "style": 'os',
                    "selector": 'td:first-child'
                }
            });
            t.on('order.dt search.dt', function () {
                t.column(1, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
        $('#btnThemVaoLop').click(function () {
            var listEmployeeID = [];
            var count = 0;
            $.each(t.rows('.selected').data(), function () {
                listEmployeeID[count] = this[2];
                count++;

            });
            $.ajax({
                type: "POST",
                traditional: true,
                url: '@Url.Action("ThemVaoLop", "tbl_ctdaotao")',
                data: JSON.stringify({ function_param: listEmployeeID, idKhoa: @khoa.id_khoadaotao }),
                contentType: "application/json; charset=utf-8",
                async: false,
                success: function (data) {
                     location.reload();
                },
                error: function () {
                    alert("Có lỗi xảy ra");
                }
            });
        });
    </script>
}




