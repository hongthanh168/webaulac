@model IEnumerable<WebAuLac.Models.HRM_EMPLOYEE_DEGREE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <h2>Bằng cấp chứng chỉ</h2>
}

<p>
    <a href="@Url.Action("Create", "HRM_EMPLOYEE_DEGREE")" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm mới</a>
</p>
<table id="EmployeeDegreeList" class="table table-striped jambo_table border-right action-table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DIC_DEGREE.DegreeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DIC_SCHOOL.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HRM_EMPLOYEE.EmployeeCode)
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowID = "HRM_EMPLOYEE_DEGREE" + item.EmployeeDegreeID.ToString();
            <tr id="@rowID">
                <td></td>
                <td>
                    <a href="@Url.Action("Details", "HRM_EMPLOYEE_DEGREE", new { id=item.EmployeeDegreeID })">@Html.DisplayFor(modelItem => item.DegreeNo)</a>
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIC_DEGREE.DegreeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIC_SCHOOL.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRM_EMPLOYEE.EmployeeCode)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "HRM_EMPLOYEE_DEGREE", new { id=item.EmployeeDegreeID })" class="btn btn-success btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "HRM_EMPLOYEE_DEGREE", new { id=item.EmployeeDegreeID })" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
        </tbody>
</table>
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")

    <script language="javascript">
        $(document).ready(function () {
            var t = $('#EmployeeDegreeList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "searchable": false,
                    "orderable": false,
                    "targets": 6
                },
                ],
                "order": [[1, 'asc']]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });

    </script>
}


