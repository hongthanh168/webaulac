@using System.Web.Mvc
@model bool?
@{
    var selectList = new List<SelectListItem>();
    selectList.Add(new SelectListItem { Text = "Nam", Value = String.Empty, Selected = !Model.HasValue });
    selectList.Add(new SelectListItem { Text = "Nam", Value = "true", Selected = Model.HasValue && Model.Value });
    selectList.Add(new SelectListItem { Text = "Nữ", Value = "false", Selected = Model.HasValue && !Model.Value });}
@Html.DropDownListFor(m => m, selectList, htmlAttributes: new { @class = "form-control" })
