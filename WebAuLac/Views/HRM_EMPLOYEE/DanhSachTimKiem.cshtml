<!--Bỏ cái này, dùng chung View Index-->
@model IEnumerable<WebAuLac.Models.sp_T_LayDanhSachNhanVien_Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <text>DANH SÁCH NHÂN VIÊN THỎA TIÊU CHÍ TÌM KIẾM</text>
}
<p>  
    
    <a href="@Url.Action("TimKiem", "HRM_EMPLOYEE")" class="btn btn-warning"><i class="fa fa-search m-right-xs"></i>Tìm kiếm nhân viên</a>
    <a href="@Url.Action("Index", "HRM_EMPLOYEE")" class="btn btn-primary"><i class="fa fa-list m-right-xs"></i>Hiển thị toàn bộ nhân viên</a>    
</p>
 

<table id="EmployeesList" class="table table-striped jambo_table border-right action-table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactAddress)
            </th>
            <th>
                Phòng ban
            </th>
            <th>
                Chức vụ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowID = "HRM_EMPLOYEE" + item.EmployeeID.ToString();
            <tr id="@rowID">
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionName)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "HRM_EMPLOYEE", new { id=item.EmployeeID })" class="btn btn-success btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "HRM_EMPLOYEE", new { id=item.EmployeeID })" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>


@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">        
        $(document).ready(function () {
            var t = $('#EmployeesList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "searchable": false,
                    "orderable": false,
                    "targets":7
                },
                ]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
        $('#EmployeesList tr').dblclick(function () {
            var id = $(this).attr('id');
            id = id.replace('HRM_EMPLOYEE', '');
            var url = '@Url.Action("Details", "HRM_EMPLOYEE", new { id = "js-id"})'
              .replace("js-id", encodeURIComponent(id));
            document.location = url;
        })
    </script>
}




