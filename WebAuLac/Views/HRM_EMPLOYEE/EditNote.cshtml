@model WebAuLac.Models.HRM_EMPLOYEE
@{
    string tieuDe = "Ghi chú cho nhân viên: " + ViewBag.HoTen;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@tieuDe</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EmployeeID)
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">Ghi chú</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>           
            

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">Mối quan hệ</label>
                        <div class="col-md-9">
                            @Html.DropDownList("QuanHeID", null, "(Không chọn)", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.QuanHeID, "", new { @class = "text-danger" })
                        </div>
                     </div>
                </div>
            </div>  
            
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">Loại quan hệ</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.LoaiQuanHe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LoaiQuanHe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>   

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">SSĐĐ</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.SSDD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SSDD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div> 
            
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">Ngày SSĐĐ</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.NgaySSDD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgaySSDD, "", new { @class = "text-danger" })
                        </div>
                       
                    </div>
                </div>
            </div>
              
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">Ghi chú SSĐĐ</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.GhiChuSSDD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GhiChuSSDD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>   
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" style="margin-bottom:0px;">
            <i class="fa fa-ban"></i> Hủy
        </button>
        <button class="btn btn-success" type="submit">
            <i class="fa fa-save"></i> Lưu thông tin
        </button>
    </div>
}
