@model IEnumerable<WebAuLac.Models.ChungChiTau>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <text>DANH SÁCH CÁC CHỨNG CHỈ CỦA TÀU</text>
}


<p>
    <a data-modal href="@Url.Action("Create", "ChungChiTau")" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm mới</a>
</p>
<table id="ChungChiTauList" class="table table-bordered table-hover table-striped action-table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.TenChungChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoNgayCanhBao)
            </th>
            <th style="width:120px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowID = item.ChungChiID.ToString();
            <tr id="@rowID">
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenChungChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoNgayCanhBao)
                </td>
                <td style="width:120px">
                    <a href="@Url.Action("SapXep", "ChungChiTau", new { id=item.ChungChiID, lenXuong =1})" class="btn btn-info btn-xs"><i class="fa fa-arrow-up"></i></a>
                    <a href="@Url.Action("SapXep", "ChungChiTau", new { id=item.ChungChiID, lenXuong =0})" class="btn btn-warning btn-xs"><i class="fa fa-arrow-down"></i></a>
                    <a href="@Url.Action("Edit", "ChungChiTau", new { id=item.ChungChiID })" class="btn btn-success btn-xs" data-modal><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "ChungChiTau", new { id=item.ChungChiID })" class="btn btn-danger btn-xs" data-modal><i class="fa fa-trash"></i></a>
              </td>
            </tr>
        }
    </tbody>
</table>
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">

        $(document).ready(function () {
            var t = $('#ChungChiTauList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "searchable": false,
                    "orderable": false,
                    "targets":3
                }]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
}


