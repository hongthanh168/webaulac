@model IEnumerable<WebAuLac.Models.DIC_DEPARTMENT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <text>DANH SÁCH TÀU</text>

   

}
 
    <table id="DSTauList" class="display table table-striped jambo_table border-right action-table">
        <thead>
            <tr>
                <th>STT</th>

                <th>
                 Tên Tàu
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.IMO)
                </th>
                <th>
                  Loại tàu
                </th>
                
                    <th>
                        @Html.DisplayNameFor(model => model.Length)
                    </th>
                <th>
                    @Html.DisplayNameFor(model => model.Breadth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Draft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Power)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeadWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gross)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Net)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearOfBuilding)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlaceOfBuiding)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PortOfRegistry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassificationAgency)
                </th>
                 
                
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string rowID = item.DepartmentID.ToString();
                <tr id="@rowID">
                    <td></td>
                    <td>
                        @{
                            if (item.DepartmentName != null)
                            {
                                string tenHoSo = item.DepartmentName.ToUpper();
                                <text>@tenHoSo</text>
                            }

                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IMO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DIC_LOAITAU.TenLoaiTau)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Breadth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Draft)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Power)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DeadWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gross)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Net)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearOfBuilding)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlaceOfBuiding)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PortOfRegistry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassificationAgency)
                    </td>

                </tr>
                            }
        </tbody>
    </table>
                          
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">
        $(document).ready(function () {
            var t = $('#DSTauList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "iDisplayLength": 25,
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "searchable": false,
                    "orderable": false,
                    "targets":1
                },
                ],
                "order": [[1, 'asc']]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
        
    </script>
}








