@using WebAuLac.Models;
@model IEnumerable<WebAuLac.Models.DIC_SALARY_DEPARTMENT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section huongdan{
    <text>Danh sách bằng cấp theo chức danh</text>
}
<p>
    <a href="@Url.Action("CreateMultiple", "DIC_SALARY_DEPARTMENT", new {idPos = ViewBag.idPos})" class="btn btn-primary"><i class="fa fa-plus m-right-xs"></i>Thêm mới</a>
</p>
<table id="schoolList" class="table table-striped jambo_table border-right action-table">
    <thead>
        <tr>
            <th></th>
            <th>
                Phòng ban ID
            </th> 
            <th>
                Chức danh ID
            </th>   
            <th>
                Salary
            </th> 
            <th>
                Allow
            </th> 
            <th>
                Bonus
            </th>           
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowID = "DIC_SALARY_DEPARTMENT_" + item.SalaryDepartmentID.ToString();
            <tr id="@rowID">
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionID)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.AllowanceSalary)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.Bonus)
                </td>               
                <td>  
                    <a href="@Url.Action("Delete", "DIC_SALARY_DEPARTMENT", new { id=item.SalaryDepartmentID })" class="btn btn-danger btn-xs" data-modal><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
@section Styles{
    @Styles.Render("~/vendors/DataTables/css")
    @Styles.Render("~/vendors/DataTables/Buttons/css")
}
@section scripts{
    @Scripts.Render("~/vendors/DataTables/js")
    @Scripts.Render("~/vendors/DataTables/Buttons/js")
    @Scripts.Render("~/bundles/jqueryval")
    <!--modal form-->
    @Scripts.Render("~/bundles/modalform")

    <script language="javascript">
        $(document).ready(function () {
            var t = $('#schoolList').DataTable({
                "language": {
                    "url": "/vendors/DataTables/langs/Vietnamese.json"
                },
                "iDisplayLength": 25,
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },                
                ]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
     </script>
}
